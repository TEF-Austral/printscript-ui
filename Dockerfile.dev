FROM node:20-alpine
WORKDIR /app
COPY package*.json ./

RUN npm install

COPY . .

ARG VITE_AUTH0_DOMAIN
ARG VITE_AUTH0_CLIENT_ID
ARG VITE_AUDIENCE

ENV VITE_AUTH0_DOMAIN=$VITE_AUTH0_DOMAIN
ENV VITE_AUTH0_CLIENT_ID=$VITE_AUTH0_CLIENT_ID
ENV VITE_AUDIENCE=$VITE_AUDIENCE

ARG PORT=5173
ENV PORT=$PORT
EXPOSE $PORT

CMD ["npm", "run", "dev"]